.login-box
  overflow: hidden
  background: rgba(0,0,0,0.2)
  position: absolute
  top: 10px
  bottom: 10px
  right: 10px
  left: 10px
  z-index: 1002
  box-shadow:0px 4px #3b636e inset,0px 12px 9px rgba(0,0,0,0.4) inset;
  padding: 20px 10px
  .line
    border: 2px #3b636e dotted
    height: 0
    margin: 10px 5px
  .username-wrapper, .password-wrapper, .submit-wrapper, .remember, .ymail-wrapper, .yzm-wrapper
    width: 100%
    font-size: 15px
    font-family: PT Sans,Arial,sans-serif
    display: flex
    .username, .password, .ymail, .yzm .yzm-input
      width: 40px
      box-shadow:0px 4px 3px rgba(0,0,0,0.3) inset;
      background: rgba(0,0,0,0.4)
      color: rgba(255,255,255,0.6)
    .text
      box-shadow:0px 4px 3px rgba(0,0,0,0.3);
      flex: 2
    .submit
      box-shadow:0px 4px 3px rgba(0,0,0,0.3);
      background: rgba(0,0,0,0.2)
      color: rgba(255,255,255,0.6)
      height: 20px
      text-align: center
      flex: 1
    .username, .password, .ymail
      flex: 5
    .yzm
      flex: 1
      display: flex
      .yzm-input
        flex: 1 1
        display: inline-block
        width: 80px
  .remember, .register-wrapper
    height: 17px
    .space
      width: 5px
    .remember-box, .register
      flex: 1
      box-shadow:0px 4px 3px rgba(0,0,0,0.3);
      height: 20px
      .retext
        height: 100%
        width: 100%
        padding-top: 3px
      .isre
        background: rgba(0,0,0,0.2)
      .checkbox
        width: 0