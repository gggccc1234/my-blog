.footer
  margin-top: 25px
  background: #a1d0dd
  font-weight: bolder
  padding: 30px 80px
  font: 15px/20px PT Sans
  text-shadow: 0px 4px #7fafbc,0px 5px 6px rgba(0,0,0,0.3)
  color: #2c3e50
  .line
    position: relative
    top: -25px
    border-top: 10px #5c8a97 solid
    box-shadow: 0px 3px #3b636e,0px 10px 5px rgba(0,0,0,0.5)
    height: 0
    width: 100%
  .adminlogin
    cursor: pointer
@media only screen and (max-width: 900px)
  .footer
    padding: 30px 0px
    .line
      top: -30px
      box-shadow: 0px 3px #3b636e,0px 5px 3px rgba(0,0,0,0.5)