.fix
  position: absolute
  top: 5px
  left: 5px
  right: 5px
  bottom: 5px
  background: #3b636e
  .fix-top, .fix-login
    margin-top: 5px
    margin-left: 5px
    margin-right: 5px
    img
      box-shadow:0px 4px #a1d0dd
      transition: all 0.5s
    &:hover
      box-shadow:0px 4px #3b636e,0px 6px 6px rgba(255,255,255,0.5)
@media screen and (max-width: 500px)
  .fix
    bottom: 5px
    .fix-login
      display: none