.article-left
  transition: all 0.3s
  background: #bae0ea
  padding-top: 6px
  flex: 0 0 100px
  position: relative
  display: flex
  flex-direction: column
  padding: 5px 10px
  text-align: left
  .icon-left
    position: absolute
    width: 0
    height: 0
    right: -15px
    border-top: 15px solid transparent
    border-left: 15px solid #bae0ea
    border-bottom: 15px solid transparent
  .icon1
    top: 68%
  .icon2
    top: 38%
  .icon3
    top: 8%
  .line
    box-sizing: border-box
    flex: 0 0
    width: 100%
    height: 0
    border: 2px dotted #5c8a97
  .wrapper
    flex: 1
    width: 100%
    font-size: 12px
    display: flex
    flex-direction: row
    .pic
      flex: 0 0 30px
    .text
      flex: 1
      padding-top: 10px
.move
  margin-right: -6px
@media only screen and (max-width: 1100px) and (min-width: 900px), (max-width: 750px)
  .move
    display: none