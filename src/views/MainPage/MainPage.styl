.main-page, .up-wrap, .up
  height: 100%
.main-page
  margin: 0 5%
  .up-wrap
    height: auto
    min-height: 100%
    .up
      padding-bottom: 100px
    .clearfix
      &:after, &:before
        content: ''
        display: table
      &:after
        clear: both
      .header-warpper
        margin-bottom: 10px
      .content-warpper
        height: 100%
        .turn
          &.turnpage-enter-active, &.turnpage-leave-active
            transition: all 0.5s
          &.turnpage-enter, &.turnpage-leave-to
            transform: translateX(1000px)
            opacity: 0
  .footer-warpper
    position: relative
    height: 100px
    margin-top: -100px
  .fixer
    position: fixed
    z-index: 999999
    width: 60px
    height: 120px
    bottom: 110px
    right: 5%
    background: rgba(0, 0, 0, 0.5)
@media only screen and (max-width: 900px)
  .main-page
    margin: 0px 3%
    .fixer
      width: 50px
      bottom: 90px