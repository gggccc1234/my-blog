.admin-wrapper
  width: 100%
  height: 100%
  min-width: 900px
  background: #e0e4cc
  .admin
    width: 100%
    min-height: 100%
    .left-wrapper
      width: 50px
      background: #3b636e
      position: fixed
      color: #e0e4cc
      padding-top: 100px
      top: 0
      bottom: 0
      .active
        background: #e0e4cc
      .left-item
        min-height: 50px
        padding: 15px 0
        line-height: 20px
        transition: all 0.5s
      .active
        background: #88bfd4
        border-left: 5px #3b636e solid
    .right-wrapper
      color: #3b636e
      margin-left: 50px
      background: #e0e4cc